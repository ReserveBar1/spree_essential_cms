<%= render :partial => 'spree/admin/shared/contents_sub_menu' %>

<%= render :partial => 'spree/admin/shared/page_tabs', :locals => {:current => "Products"} %>

<% if @page_product.try(:errors).present? %>
  <%= render 'spree/shared/error_messages', :target => @page_product %>
<% end %>

<%= form_for([:admin, @page.id, @page_product], :url => admin_page_product_url(@page, @page_product) ) do |f| %>
    <p>
      <%= label_tag ("thumbnail") %>:<br/>
      <%= link_to(mini_image(@page_product.product, :itemprop => "name"), @page_product.product) %>
    </p>
    <%= render "form", :form => f %>
  </table>
  <p class="form-buttons">
    <%= button t("update") %>
    or <%= link_to t("cancel"), admin_page_product_url(@page), :id => "cancel_link" %>
  </p>
<% end %>